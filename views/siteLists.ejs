<!DOCTYPE HTML>
<html>
  <head>
    <title>顺速驾校</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/stylesheets/comman.css" />
    <link rel="stylesheet" href="/stylesheets/site.css">
  </head>
  <body>
    <header class="header" >
      <h1 class="title">场地展示</h1>
    </header>
    <section>
      <ul class="site-content">
        <% for(var i=0; i<content.length; i++) {%>
          <li>
            <a href="/site/detail?id=<%= content[i].id %>">
              <span><%= content[i].name %></span>
              <img src="<%= content[i].picture %>" />
            </a>
          </li>
        <% } %>
      </ul>
    </section>
  </body>
</html>
